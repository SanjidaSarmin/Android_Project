<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Attendance_tracker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Attendance_tracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Attendance_tracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Attendance_tracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
